<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="io.github.changjiashuai.drawabledemo.MainActivity">

    <Button
            android:text="clickClipDrawable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickClipDrawable"/>
    <Button
            android:text="clickTransitionDrawable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickTransitionDrawable"/>
    <Button
            android:text="clickShapeDrawable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickShapeDrawable"/>
    <Button
            android:text="clickVectorDrawable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickVectorDrawable"/>

    <ImageView
            android:id="@+id/iv_test"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
</LinearLayout>
